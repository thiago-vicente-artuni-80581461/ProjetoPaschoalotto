@model Usuario
<div style="background-color:black;">
    <h5 style="color:white; margin-left:10px;">Cadastro de Usuário</h5>
</div>
<form asp-action="SalvarUsuario" asp-controller="CadastroUsuario" method="post">
    <input type="text" asp-for="@Model.Id" hidden />
    <div class="row mb-3">
        <label class="col text-black">Email:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.Email" required class="form-control w-50" name="email" id="email">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col text-black">Cidade:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.City" required class="form-control w-50" name="city" id="city">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col text-black">País:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.Country" required class="form-control w-50" name="country" id="country">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col text-black">Nome:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.First" required class="form-control w-50" name="first" id="first">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col text-black">Sobrenome:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.Last" required class="form-control w-50" name="last" id="last">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col text-black">Telefone:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.Phone" required class="form-control w-50" name="phone" id="phone">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col text-black">Foto:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.Large" required class="form-control w-50" name="large" id="large">
        </div>
    </div>
    <div class="btn-group" role="group">
        <input type="submit" class="btn btn-dark" value="Salvar" />
    </div>

</form>
<br />
<br />
<div class="col-lg-12" style="text-align: left;">
    <a asp-action="Index" asp-controller="Relatorio" role="button" class="btn btn-dark">Voltar</a>
</div>